extends  ../layouts/main-layout

block title
    title #{docTitle}
block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src=`${product.imageUrl || "https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"}` alt="A Book")
                        .card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}
                            p.product__description #{product.qty}e
                            .card__actions
                                a(href=`/products/${product.id}` class="btn") Details
                                form(action="/delete-from-cart" method="post").center-card
                                    button.btn(type="submit") Delete
                                    input(type="hidden" name="productId" value=`${product.id}`)
                                    input(type="hidden" name="price" value=`${product.price}`)
        else
            h1 No products in cart